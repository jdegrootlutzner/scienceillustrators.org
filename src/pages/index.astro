---
import Layout from '../layouts/Layout.astro';
import { Navigation } from '../components/Navigation';
import { getCollection } from 'astro:content';
import { Button } from '../components/ui/button';

const articles = await getCollection('articles');
---

<Layout>
  <Navigation client:load />
  <main class="container py-12">
    <section class="py-12 max-w-4xl">
      <h1 class="text-4xl font-bold mb-6">Compelling research deserves compelling visuals.</h1>
      <p class="text-xl text-muted-foreground mb-8">
        We believe research is only as good as its communication. Thatâ€™s why we strive to make science more engaging and understandable for all audiences through clear visual storytelling.
      </p>
      <div class="flex flex-wrap gap-4">
        <Button>Get Started</Button>
        <Button variant="outline">Learn More</Button>
      </div>
    </section>

    <section class="py-12 border-t border-border">
      <h2 class="text-3xl font-bold mb-8">Latest Articles</h2>
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {articles.map(article => (
          <div class="group">
            <a href={`/articles/${article.slug}`} class="block">
              <div class="p-6 border border-border rounded-lg transition-all group-hover:border-primary group-hover:shadow-sm">
                <h3 class="text-xl font-medium mb-2">{article.data.title}</h3>
                <p class="text-muted-foreground line-clamp-2 mb-4">{article.data.description}</p>
                <div class="flex justify-between items-center text-sm">
                  <span class="text-muted-foreground">{article.data.date.toLocaleDateString()}</span>
                  <span class="text-primary font-medium group-hover:underline">Read article</span>
                </div>
              </div>
            </a>
          </div>
        ))}
      </div>
    </section>
  </main>
</Layout>
